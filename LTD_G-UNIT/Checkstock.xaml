<Window x:Class="LTD_G_UNIT.Checkstock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Checkstock" Height="520" Width="550" Background="#FFD4D4D4" BorderBrush="#FFFFFCFC" Foreground="Black">
    <Grid Margin="0,0,0,-21">
        <Label Content="Number of Grades in stock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="168,10,0,0" Width="222" FontWeight="Bold" Height="38" FontSize="16"/>
        <ListBox Name="listboxstock" HorizontalAlignment="Left" Height="384" VerticalAlignment="Top" Width="473" Margin="30,48,0,0" SelectionChanged="listboxstock_SelectionChanged"/>
        <Button Content="display stock" HorizontalAlignment="Left" Margin="395,453,0,0" VerticalAlignment="Top" Width="125" Click="Button_Click"/>

    </Grid>
</Window>
